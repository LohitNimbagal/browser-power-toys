{
    "manifest_version": 3,
    "name": "Browser Power Toys Extension",
    "description": "Extention for Power Users",
    "version": "0.5.1",
    "icons": {
        "16": "icons/16.png",
        "38": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "sidePanel",
        "storage",
        "tabs",
        "cookies"
    ],
    "action": {},
    "web_accessible_resources": [
        {
            "resources": [
                "icons/save-image.png"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "http://localhost:3000/*",
        "https://browserpowertoys.xyz/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "utils/toast/toast.js",
                "utils/error/error.js",
                "content.js"
            ],
            "css": [
                "utils/toast/toast.css",
                "styles.css"
            ]
        }
    ]
}