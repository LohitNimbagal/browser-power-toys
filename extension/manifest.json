{
    "manifest_version": 3,
    "name": "Browser Power Toys Extension",
    "description": "Extention for Power Users",
    "version": "0.5",
    "icons": {
        "16": "icons/icon16.png",
        "19": "icons/icon19.png",
        "32": "icons/icon32.png",
        "38": "icons/icon38.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "sidePanel",
        "storage",
        "tabs",
        "cookies"
    ],
    "action": {},
    "web_accessible_resources": [
        {
            "resources": [
                "icons/save-image.png"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "http://localhost:3000/*",
        "https://browserpowertoys.xyz/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}